{
  "name": "html-scss-js-codespace-template",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "watch:scss": "sass --watch src/scss/main.scss:dist/styles.css --style=expanded",
    "watch:js": "esbuild --bundle src/js/main.js --outfile=dist/main.js --watch",
    "watch:html": "node watch-html.cjs",
    "watch:images": "cpx \"src/images/**/*.*\" dist/images --watch",
    "copy:images": "mkdir -p dist/images && cp -r src/images/* dist/images/",
    "copy:components": "cp -r src/components dist/components",
    "build": "esbuild src/js/main.js --bundle --outfile=dist/main.js && npx posthtml src/index.html -o dist/index.html && cp -r src/scss dist/scss && npm run copy:images && npm run copy:components",
    "server": "node server/index.js",
    "dev": "npm-run-all --parallel watch:scss watch:js watch:html watch:images copy:images copy:components server"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "cpx": "^1.5.0",
    "esbuild": "^0.18.0",
    "npm-run-all": "^4.1.5",
    "posthtml": "^0.16.6",
    "posthtml-cli": "^0.10.0",
    "posthtml-include": "^1.7.4",
    "sass": "^1.75.0"
  },
  "dependencies": {
    "express": "^4.22.1",
    "nodemailer": "^7.0.12",
    "swiper": "^11.2.10"
  }
}
